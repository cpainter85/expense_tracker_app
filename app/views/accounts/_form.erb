<%= simple_form_for @account do |f| %>
  <%= f.input :name %>
  <%= f.input :account_type, collection: Account::ACCOUNT_TYPES, selected: @account.account_type, prompt: "Select Account Type" %>
  <%= f.input :credit_limit, as: :currency %>
  <%= f.input :enabled, input_html: { checked: @account.enabled.nil? ? true : @account.enabled } %>
  <%= f.button :submit, class: "btn btn-outline-primary" %>
<% end %>