<%= form_for @account do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :account_type, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.select :account_type, options_for_select(Account::ACCOUNT_TYPES), {include_blank: true}, {class: "form-control"} %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :credit_limit, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.number_field :credit_limit, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :enabled, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.check_box :enabled, {class: "form-check-input"} %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
  
<% end %>