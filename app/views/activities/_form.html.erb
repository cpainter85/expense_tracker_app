<%= simple_form_for [@account, @activity] do |f| %>
  <%= f.input :account_id, collection: Account.all, prompt: "Select Account", selected: @activity.account_id %>
  <%= f.input :transaction_date, order: [:month, :day, :year] %>
  <%= f.input :merchant, url: autocomplete_merchants_path, as: :autocomplete  %>
  <%= f.input :category_id, collection: Category.all, prompt: "Select Category", selected: @activity.category_id %>
  <%= f.input :description %>
  <%= f.input :amount, as: :currency %>
  <%= f.input :cleared, input_html: { checked: @activity.cleared.nil? ? true : @activity.cleared } %>
  <%= f.button :submit, class: "btn btn-outline-primary" %>
<% end %>