<nav aria-label="Page navigation">
  <ul class="pagination justify-content-end">
    <li class="page-item <%= "#{resp.first_page? ? "disabled" : ""}" %>">
      <%= link_to "Previous", account_path(account, page: resp.prev_page), class: "page-link" %>
    </li>
    <% (1..resp.total_pages).each do |page| %>
      <li class="page-item <%= active_page?(current_page: resp.current_page, page: page) %>">
        <%= link_to page, account_path(account, page: page), class: "page-link" %></a>
      </li>
    <% end %>
    <li class="page-item <%= "#{resp.last_page? ? "disabled" : ""}" %>">
      <%= link_to "Next", account_path(account, page: resp.next_page), class: "page-link" %>
    </li>
  </ul>
</nav>